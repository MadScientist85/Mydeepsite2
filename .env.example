# DeepSite 2.0 Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI PROVIDER API KEYS
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-5-mini 

# OpenRouter Configuration (Access to multiple models)
OPENROUTER_API_KEY=your_openrouter_api_key_here  
OPENROUTER_MODEL=deepseek/deepseek-chat-v3.1
OPENROUTER_MODEL=gpt-oss-20b-free
OPENROUTER_MODEL=gpt-oss-120b
OPENROUTER_MODEL=grok4
OPENROUTER_MODEL=GROK-fast-code
OPENROUTER_MODEL=qwen3-coder-30b-a3b-instruct
OPENROUTER_MODEL=deepseek/deepseek-chat-v3.1 

# XAI (Grok) Configuration
XAI_API_KEY=your_xai_api_key_here
XAI_MODEL=grok-4

# Groq Configuration (Ultra-fast inference)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_MODEL=qwen3-coder-30b-a3b-instruct

# Perplexity Configuration (Web-connected AI)
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_MODEL=llama-3.1-sonar-large-128k-online


# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration (for chat memory)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Port (3000 for local development)
PORT=3000

# AI Request Defaults
DEFAULT_MAX_TOKENS=8000
DEFAULT_TEMPERATURE=0.7

# Rate Limiting (requests per hour per IP, 0 to disable)
IP_RATE_LIMIT=100

# Node Environment
NODE_ENV=development

# =============================================================================
# DEPLOYMENT TOKENS (Don't include in .env for security)
# =============================================================================

# GitHub Personal Access Token (for repository access)
# GITHUB_TOKEN=your_github_token_here
# GITHUB_SSH_KEY=

# Vercel Token (for deployment)
# VERCEL_TOKEN=your_vercel_token_here
# VERCEL_PROJECT_ID= 
# VERCEL_API_KEY=

# Ngrok Auth Token (for development tunneling)
# NGROK_AUTH_TOKEN=your_ngrok_token_here
# NGROK_API_KEY=
# NGROK_URL=

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Site URL (for OpenRouter referrer)
SITE_URL=https://your-domain.vercel.app

# Custom OpenAI Base URL (if using a proxy)
# OPENAI_BASE_URL=https://api.openai.com/v1

# Logging Level
LOG_LEVEL=info
